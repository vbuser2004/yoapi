{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "module": "ES2015",
        "target": "ES6",
        "strictNullChecks": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "moduleResolution": "node"
    },
    "include": ["**/*", ".*.js"],
    "exclude": ["node_modules"]
}
