{
  "compilerOptions": {
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "allowJs": true,
    "outDir": "./dist/",
    "module": "NodeNext",
    "target": "ES2022",
    "sourceMap": true,
    "moduleResolution": "NodeNext",
    "moduleDetection": "force",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "lib": ["es2022", "DOM"],
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "BrunoAPICollection"]
}
